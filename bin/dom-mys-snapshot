#! /usr/bin/ruby1.8
#    Brightbox - Configure a load balancer image
#    Copyright (C) 2010 Brightbox Systems
#    Author: Neil Wilson
#
#  dom-lb-configure queue-name json-config


begin
  require "domtrix_queue"
rescue LoadError
  require File.join(File.dirname(__FILE__),'..', 'relative-env')
  retry
end

unless ARGV.length == 2
  abort "Usage: #{File.basename $0} queue-name target-uri"
end

HOST = ARGV.shift
TARGET_URI = ARGV.shift

queue = DomtrixQueue.new(HOST)
queue.execute(
  'snapshot',
  {:targeturi => TARGET_URI},
  "Snapshotting MySQL database to #{TARGET_URI}"
  )
exit
