#!/bin/sh
set -e

HIERA_FILE=/etc/brightbox/hiera/initial.yaml
PUPPET_GIT_CONFIG=/etc/puppet-git-receiver.conf
puppet_receiver_branch_name='v2'
MYS_DEFAULT_VERSION='5.5'
PG_DEFAULT_VERSION='9.5'

fail() {
  echo "$@" >&2
  exit 1
}

list_classes() {
  local service="$1"
  case ${service} in
    lb)
      echo "- haproxy"
      ;;
    mys)
      echo "- mys_service"
      ;;
    pg)
      echo "- pg_service"
      ;;
    *)
      fail "Unknown service ${service}"
      ;;
  esac
}

generate_hiera_config() {
  local service_type="$1"
  local db_version="$6"
  local queue_name="$2"
  local mq_login="$3"
  local mq_password="$4"
  local mq_hosts="$5"
  local class_list
  case "${1}" in
      mys56|mys5_6)
          service_type=mys
	  db_version=5.6
	  ;;
      mys55|mys5_5|mys)
          service_type=mys
          db_version="${6:-${MYS_DEFAULT_VERSION}}"
	  ;;
      pg)
	  service_type=pg
	  db_version="${6:-${PG_DEFAULT_VERSION}}"
	  ;;
  esac
  class_list=$(list_classes ${service_type})
  mkdir -p $(dirname "${HIERA_FILE}")
  cat >"${HIERA_FILE}" <<-END 
---
classes:
- domtrix
${class_list}
domtrix::mquser: ${mq_login}
domtrix::mqpassword: ${mq_password}
domtrix::mqhosts: ${mq_hosts}
domtrix::queue: ${queue_name}
domtrix::service: ${service_type}
mys_service::version: ${db_version}
pg_service::version: ${db_version}
END
}

generate_puppet_git_receiver_config() {
  cat >"${PUPPET_GIT_CONFIG}" <<-CONF
BRANCH=${puppet_receiver_branch_name}
CONF
}

[ "$#" -ge 5 ] ||
  fail "Usage: $(basename $0) <service> <queue> <login> <password> <hosts> [<version>]"
[ "$#" -le 6 ] ||
  fail "Usage: $(basename $0) <service> <queue> <login> <password> <hosts> [<version>]"

generate_puppet_git_receiver_config
generate_hiera_config "$@"
